#include <stdio.h>

int main()
{
   float n1,n2,n;
      char ch;
   printf("Ente the operator:");
   scanf("%c", &ch);
   printf("Enter the numbers:");
   scanf("%f %f",&n1,&n2);

    
    
   switch(ch)
   {
       case '+':{
           n=n1+n2;
           printf("%f",n);
           break;
       }
       case '-':{
           n=n1-n2;
           printf("%f",n);
           break;
       }
       case '*':{
           n=n1*n2;
           printf("%f",n);
           break;
       }
       case '/':{
           if(n2==0)
           {
               printf("Invalid number");
           }
           else{
                          
           n=n1/n2;
           printf("%f",n);
       }
           break;
      
       }
       default:{
           printf("no such operations");
           break;
       }
    }

   return 0;
}
